{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["WEB_URL", "DATABASE_URL", "GRAPHQL_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "deploy:dev": {
      "dependsOn": ["deploy"],
      "cache": false
    },
    "deploy:prod": {
      "dependsOn": ["deploy"],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "generate": {
      "persistent": true,
      "cache": false
    }
  }
}
